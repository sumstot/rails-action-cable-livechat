<div class="container">
  <div class="d-flex justify-content-center">
    <h1>Welcome to the Chat App!</h1>
  </div>
  <hr />
  <div class="chatroom-conatiner">
    <%= link_to 'Create #Chatroom',  new_chatroom_path, { :class=>"new-room-button index" }%>
    <ul>
      <% Chatroom.all.each do |chatroom| %>
          <li class="chat-links"><%= link_to "##{chatroom.name}", chatroom_path(chatroom.id), :class => "chat-links-a" %></li>
      <% end %>
    </ul>
  </div>
</div>
